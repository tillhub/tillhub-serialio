{
  "name": "@tillhub/serialio",
  "version": "3.0.0",
  "description": "Messaging API for communication over serial interfaces",
  "main": "dist/serialIO",
  "license": "MIT",
  "scripts": {
    "build:main": "tsc -p tsconfig.json",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "build:bundle": "tsc --module commonjs",
    "build": "npm run clean && npm run build:bundle",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "tdd": "npm run test:watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache --runInBand",
    "clean": "rimraf dist docs",
    "semantic-release": "semantic-release --branch next",
    "precommit": "git add .",
    "commit": "npm run precommit && git-cz"
  },
  "author": {
    "name": "Robert Ende",
    "email": "robert.ende@tillhub.de"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "promise-queue": "^2.2.5",
    "serialport": "^7.0.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^2.1.1",
    "@semantic-release/exec": "^2.3.0",
    "@semantic-release/git": "^6.0.1",
    "@semantic-release/github": "^4.4.0",
    "@semantic-release/npm": "^3.4.0",
    "@types/acorn": "^4.0.5",
    "@types/debug": "^4.1.3",
    "@types/glob": "7.1.1",
    "@types/jest": "^24.0.11",
    "@types/promise-queue": "^2.2.0",
    "@types/rimraf": "^2.0.2",
    "@types/semantic-release": "^15.13.0",
    "@types/serialport": "^7.0.2",
    "acorn": "^6.1.1",
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "glob": "latest",
    "jest": "^24.5.0",
    "nodemon": "^1.18.7",
    "rimraf": "^2.6.0",
    "semantic-release": "^15.9.17",
    "ts-loader": "^5.3.3",
    "tslint": "^5.14.0",
    "ts-jest": "^24.0.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.4000",
    "validate-commit-msg": "^2.14.0",
    "@serialport/binding-mock": "latest",
    "@serialport/stream": "latest"
  },
  "files": [
    "package.json",
    "package-lock.json",
    "src",
    "dist",
    "CHANGELOG.md"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "src",
          "dist",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/src/@types/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 15,
        "functions": 15,
        "lines": 15,
        "statements": 1
      }
    },
    "collectCoverage": true
  }
}
